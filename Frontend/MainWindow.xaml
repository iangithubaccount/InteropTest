<Window x:Class="InteropTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteropTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300"
        ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" Margin="0,30,0,30" Width="235">
        <Label HorizontalAlignment="Left" Content="Nth Prime Number:"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" Width="120" x:Name="InputField"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Click="Button_Click" Margin="0, 20, 0, 0"/>
        <Label x:Name="OutputLabel" Content="Output: " HorizontalAlignment="Left" Margin="0, 20, 0, 0"/>
        <Label x:Name="CsRuntimeLabel" Content="C# Runtime (MS):" HorizontalAlignment="Left" Grid.RowSpan="2"/>
        <Label x:Name="CppRuntimeLabel" Content="C++ Runtime (MS):" HorizontalAlignment="Left" Grid.Row="1"/>

    </StackPanel>
</Window>
